@model sistemaVendaWebApi.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using(Html.BeginForm("Edit","Cliente",FormMethod.Post)){
            <div class="form-group">                
                @Html.Label("Nome"):
                @Html.TextBox("Nome", null, new { @class = "form-control"})
                @Html.ValidationMessage("Nome", "", new { @class = "text-danger" })
            </div>
            <div class="form-group"> 
                @Html.Label("Cpf"):
                @Html.TextBox("Cpf", null, new { @class = "form-control"})
                @Html.ValidationMessage("Cpf", "", new { @class = "text-danger" })
            </div>
            <div class="form-group"> 
                @Html.Label("DataNascimento"):
                @Html.TextBox("DataNascimento", null, new { @class = "form-control", @type = "date"})
            </div>
            <div class="form-group"> 
                @Html.Label("Status"):
                @Html.TextBox("Status", null, new { @class = "form-control"})
                @Html.ValidationMessage("Status", "", new { @class = "text-danger" })
            </div>
            <div class="form-group"> 
                @Html.Label("Sexo"):
                @Html.TextBox("Sexo", null, new { @class = "form-control"})
                @Html.ValidationMessage("Sexo", "", new { @class = "text-danger" })
            </div>
            <div class="form-group"> 
                <div class="mt-3">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    @Html.ActionLink("Voltar","Index",null,null,new {@class = "btn btn-secondary"})
                </div>
            </div>
        }
    </div>
</div>
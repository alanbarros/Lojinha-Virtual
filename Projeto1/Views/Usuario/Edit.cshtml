@model sistemaVendaWebApi.Models.Usuario

@{
    ViewData["Title"] = "Editar Usu√°rio";
}

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using(Html.BeginForm("Edit","Usuario",FormMethod.Post)){
            <div class="form-group">                
                @Html.Label("Nome"):
                @Html.TextBox("Nome",null, new { @class = "form-control"})
                @Html.ValidationMessage("Nome", "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Username"):
                @Html.TextBox("Username",null, new { @class = "form-control"})
                @Html.ValidationMessage("Username", "", new { @class = "text-danger" })
            </div>
            <div class="form-group"> 
                @Html.Label("Senha"):
                @Html.TextBox("Senha",null, new { @class = "form-control", @type = "password"})
                @Html.ValidationMessage("Senha", "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="mt-3">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                    @Html.ActionLink("Voltar","Index",null,null,new {@class = "btn btn-secondary"})
                </div>
            </div>
        }
    </div>
</div>

